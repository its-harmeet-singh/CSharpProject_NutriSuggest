@page
@model RegisterModel
@{
    ViewData["Title"] = "Create Your NutriSuggest Account";
}
<style>
    body {
        background: linear-gradient(135deg, #f5f7fa, #e4efe9);
    }
</style>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 500px; width: 100%;">
        <div class="text-center mb-4">
            <img src="/images/logo.png" alt="NutriSuggest" style="height:60px;" />
            <h2 class="fw-bold mt-3 text-primary">Join NutriSuggest</h2>
            <p class="text-muted">Your personalized meal planning journey starts here</p>
        </div>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Email -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control rounded-3" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control rounded-3" placeholder="Password" />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="form-floating mb-4">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control rounded-3" placeholder="Confirm Password" />
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Register Button -->
            <button id="registerSubmit" type="submit" class="btn btn-success btn-lg w-100 rounded-3 shadow-sm">
                🚀 Create Account
            </button>
        </form>

        <div class="text-center mt-3">
            <span class="text-muted">Already have an account?</span>
            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-semibold">Login</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
