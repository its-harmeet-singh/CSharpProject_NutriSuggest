@model FavoriteRecipeViewModel

@{
    ViewData["Title"] = $"Details: {Model.RecipeTitle}";
}

<style>
    body {
        background: linear-gradient(135deg, #f5f7fa, #e4efe9);
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <h2 class="card-title text-primary mb-3">
                        🍽️ @Model.RecipeTitle
                    </h2>

                    <p class="text-muted">
                        <i class="bi bi-calendar-event"></i>
                        Favorited on: <strong>@Model.FavoritedAt.ToLocalTime().ToString("f")</strong>
                    </p>

                    <p class="mb-4">
                        <span class="badge bg-warning text-dark">
                            ⭐ Rating: @(Model.Rating.HasValue? Model.Rating.Value.ToString() : "Not rated")
                        </span>
                    </p>

                    <h5 class="fw-semibold text-success">🥕 Ingredients:</h5>
                    <ul class="list-group list-group-flush mb-4">
                        @foreach (var ing in Model.Ingredients)
                        {
                            <li class="list-group-item">@ing</li>
                        }
                    </ul>

                    <h5 class="fw-semibold text-info">📋 Instructions:</h5>
                    <ol class="ps-3">
                        @foreach (var step in Model.Instructions)
                        {
                            <li class="mb-2">@step</li>
                        }
                    </ol>

                    <div class="mt-4 text-end">
                        <a asp-action="MyFavorites" class="btn btn-outline-primary">
                            ← Back to Favorites
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
